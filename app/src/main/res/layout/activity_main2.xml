<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CategoryActivity"
    android:background="@drawable/bg"
    android:orientation="vertical"


    >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:src="@drawable/replay_text"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"

        >
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_alignParentLeft="true"
           android:layout_marginLeft="30dp"

           >
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/white_background"
            android:id="@+id/flipuplayout"
            android:gravity="center">



            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/flip_up_category"

                />
        </RelativeLayout>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Flip Up"
    android:textColor="#fff"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:textSize="23.5sp"
    android:id="@+id/flip_up"
    />


       </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            >
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/white_background"
                android:id="@+id/full_face_layout"
                android:gravity="center">



                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/leocategory"

                    />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Face"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="23.5sp"
                android:id="@+id/full_face"
                />


        </LinearLayout>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            >
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/white_background"
                android:id="@+id/open_face_layout"
                android:gravity="center">



                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/open_face_category"

                    />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open Face"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="23.5sp"
                android:id="@+id/open_face"

                />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            >
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/white_background"
                android:id="@+id/moto_cross_layout"
                android:gravity="center">



                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/moto_cross_category"

                    />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Moto Cross"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="23.5sp"
                android:id="@+id/moto_cross"
                />


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
