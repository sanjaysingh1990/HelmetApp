                android:src="@drawable/one"


                />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:src="@drawable/two"

                />
            <ImageView
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:src="@drawable/three"
                />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:src="@drawable/four"
                />
-->

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:id="@+id/image_recycler"
                >

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Features"
            android:textColor="#a00000"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:id="@+id/features"
            />

        <TextView
            android:id="@+id/desc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- An aerodynamic shell design constructed using and advanced lightweight material"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            />

       <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- A helmet liner and cheek pads made with a hypoallergenic and antimicrobial fabric"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:id="@+id/desc2"
            android:visibility="gone"
            />
</LinearLayout>
</ScrollView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:orientation="horizontal"
    android:id="@+id/trybutton"
    android:layout_alignParentBottom="true"
    android:layout_below="@+id/scroll"
    android:layout_weight="0"
    android:layout_marginBottom="5dp"
    >
    <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#a00000"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:text="TRY IT !!"
      android:gravity="center"
    android:textColor="#fff"
    android:textSize="20sp"
    android:id="@+id/tryit"

        />
</LinearLayout>



</LinearLayout>
