<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".DescriptionActivity"
    android:background="@drawable/background"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray"
        android:layout_alignParentTop="true"
android:id="@+id/logo"
android:layout_weight="0"
        >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:src="@drawable/replay_text"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:padding="10dp"

            />

    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll"
        android:layout_below="@+id/logo"
        android:layout_weight="1"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RP-013DCV-WHGR"
        android:textColor="#a00000"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textSize="19.5sp"
        android:id="@+id/helmetname"
        />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_alignParentLeft="true"
           android:layout_marginLeft="10dp"
           android:layout_marginTop="20dp"
           >

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/five"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Air Ventilation System"
        android:gravity="center"
        android:textSize="9sp"
        />

</LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

<ImageView
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:src="@drawable/six"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="         Padding             "
        android:layout_marginLeft="4dp"
        android:textSize="9sp"
        android:gravity="center"
        />

</LinearLayout>


           </LinearLayout>


           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/seven"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="    Scratch Resistant     "
        android:gravity="center"
        android:textSize="9sp"
        />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/eight"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Micromatic Buckle"
        android:layout_marginLeft="2dp"
        android:layout_gravity="center"
        android:textSize="9sp"
        />


</LinearLayout>


           </LinearLayout>


           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
<ImageView
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:src="@drawable/nine"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="       800GM       "
        android:gravity="center"
        android:textSize="9sp"
        />
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ten"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="          CM/L-3291254              "
        android:layout_marginLeft="4dp"
        android:layout_gravity="center"
        android:textSize="9sp"
        />

</LinearLayout>



           </LinearLayout>

       </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@android:drawable/picture_frame"
            android:id="@+id/layout1"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="40dp"
            >
           <ImageView
               android:layout_width="160dp"
               android:layout_height="160dp"
               android:src="@drawable/leo"
                android:id="@+id/helmetimage"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RP-013DCV-WHGR"
                android:layout_gravity="center"
                android:textColor="#000"
                android:id="@+id/name1"
                android:textSize="12sp"
                />


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Locate Distributor"
            android:layout_below="@+id/layout1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45dp"
            android:textColor="#000"
            android:layout_marginTop="10dp"
            android:id="@+id/locate"
            android:textSize="12sp"
            />

    </RelativeLayout>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Available Colors"
    android:textColor="#a00000"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:textSize="18sp"
    android:id="@+id/availablecolors"
    />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            >
         <!--   <ImageView
                android:layout_width="120dp"
